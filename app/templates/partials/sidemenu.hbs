                <p class="title is-6">
                  {{merchant.name}}
                </p>
                <p class="subtitle">
                  <span class="tag is-gray">
                    {{merchant.totalArticlesCount}}
                  </span>
                </p>
              {{/ui/-side-menu-link-to}}
            </li>
          {{/each}}
